<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:android="http://schemas.android.com/apk/res/android"
       tools:orientation="vertical"
       tools:parentTag="android.widget.LinearLayout" android:id="@+id/merge">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#00EC1414">
        <TextView
                android:background="#009C27B0"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="18sp"
                android:textColor="#000000"
                android:id="@+id/textView" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                tools:text="TEST"
                android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.571"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/starBT"
                android:textStyle="normal" app:layout_constraintHorizontal_bias="0.615"
                android:fontFamily="sans-serif-light" app:layout_constraintBottom_toTopOf="@+id/divider">

        </TextView>


        <ImageButton
                android:layout_width="38dp"
                android:layout_height="38dp" app:srcCompat="@drawable/ic_star_off"
                android:id="@+id/starBT"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:contentDescription="@string/descr_star"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                style="@android:style/Widget.ImageButton" android:backgroundTint="#00FFFFFF"
                android:scaleType="matrix"/>
        <ImageButton
                android:layout_width="38dp"
                android:layout_height="38dp" app:srcCompat="@drawable/ic_share"
                android:id="@+id/shareBT"
                android:contentDescription="@string/descr_share"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/starBT" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                style="@android:style/Widget.ImageButton" android:backgroundTint="#00123FDD"
                android:adjustViewBounds="false" android:scaleType="matrix"/>
        <View
                android:id="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>